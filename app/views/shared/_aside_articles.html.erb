<div class="aside-wrapper">
  <div class="side-box">
    <div class="side-head-area">
      <h3 class="side-head-title">SEARCH</h3>
    </div>
    <%= form_with url: search_articles_path, method: :get, class: 'search-form', local: true do |f| %>
      <%= f.text_field :keyword, class: 'input-box', placeholder: 'キーワードから探す' %> 
      <%= button_tag type: :submit, class:"search-btn" do %>
        <i class="fas fa-search"></i>
      <% end %>
    <% end %>
  </div>
  <div class="side-box">
    <div class="side-head-area">
      <h3 class="side-head-title">ARTICLE MENU</h3>
    </div>
    <ul>
      <li><%= link_to "新着記事", root_path, class: 'side-menu-item' %></li>
      <% if user_signed_in? %>
        <li><%= link_to "ブックマーク", user_bookmarks_path(current_user.id), class: 'side-menu-item' %></li>
        <li><%= link_to "#{current_user.nickname}さんの投稿記事", user_path(current_user), class: 'side-menu-item' %></li>
      <% end %>
    </ul>
  </div>
  <% if user_signed_in? %>
    <div class="side-box">
      <div class="side-head-area">
        <h3 class="side-head-title">USER SUPPORT</h3>
      </div>
      <ul class="user-support-menu">
        <li><%= link_to "ノート", user_notes_path(current_user.id), class: 'side-menu-item note' %></li>
      </ul>
      <%= form_with model: @note, url: notes_path, class: 'memo-form', local: true do |f| %>
        <%= f.text_area :text, class: 'memo-area', id: 'memo-field', placeholder: '気になることをメモしよう！' %>
        <%= f.submit 'メモする', class: 'memo-submit' %>
      <% end %>
    </div>
  <% end %>
</div>